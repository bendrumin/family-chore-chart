{
  "version": 2,
  "builds": [
    {
      "src": "frontend/api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/frontend/api/health.js"
    },
    {
      "src": "/api/send-contact-email",
      "dest": "/frontend/api/send-contact-email.js"
    },
    {
      "src": "/api/create-checkout-session",
      "dest": "/frontend/api/create-checkout-session.js"
    },
    {
      "src": "/api/create-paddle-checkout",
      "dest": "/frontend/api/create-paddle-checkout.js"
    },
    {
      "src": "/api/paddle-webhook",
      "dest": "/frontend/api/paddle-webhook.js"
    },
    {
      "src": "/api/stripe-webhook",
      "dest": "/frontend/api/stripe-webhook-stream.js"
    },
    {
      "src": "/api/test-webhook",
      "dest": "/frontend/api/test-webhook.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/frontend/api/$1.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
} 